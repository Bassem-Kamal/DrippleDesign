<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrippleDesign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color attributes > You Should adjust those colors to gain the benefit of your theme -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/brand_yellow</item>
        <item name="colorSecondaryVariant">@color/brand_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--   don't adjust that color to respect UX-->
        <!--        <item name="colorError">@color/colorError</item>-->
        <!--        <item name="colorOnError">@color/colorOnError</item>-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- to override the default component style >> just add <item  tag with name of
         (componentName+Style) and give it a style value you already defined-->
        <item name="materialButtonOutlinedStyle">@style/MaterialOutLineButtonsStyle</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetStyle</item>
    </style>

</resources>